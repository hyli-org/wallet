    "dependencies": {
        "buffer": "^6.0.3",
        "crypto-js": "^4.2.0",
        "elliptic": "^6.6.1",
        "hyli": "^0.4.1",
        "hyli-noir": "^0.1.0",
        "hyli-wallet": "^0.5.0",
        "js-sha3": "^0.9.3"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.2.2",
        "@types/elliptic": "^6.4.18",
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0"
    },
    "keywords": [
        "wallet",
        "registration",
        "hyli",
        "blockchain",
        "cli",
        "command-line"
